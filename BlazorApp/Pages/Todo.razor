@page "/todo"
@using BlazorApp.Data

<h3>Todo</h3>

<ul>
    @foreach (var todo in todos)
    {
        <li>@todo.Title</li>
    }
    <input type="text" @bind="newTodo" placeholder="Add to title of your list">
    <button @onclick="IncrementValueToList">Add To Do</button>
</ul>

@code {
    private List<TodoItem> todos = new();
    private string? newTodo;

    private void IncrementValueToList()
    {
        if (!string.IsNullOrWhiteSpace(newTodo))
        {
            todos.Add(new TodoItem{Title = newTodo});
            newTodo = string.Empty;
        }
    }
}
